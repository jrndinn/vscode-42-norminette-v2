{
  "name": "42-norminette-v2",
  "displayName": "42 Norminette v2 (3.x)",
  "description": "The new 42 school norminette, compatible with norme v3.0",
  "version": "0.0.3",
  "publisher": "hroussea",
  "engines": {
    "vscode": "^1.52.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jorundev/vscode-42-norminette-v2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Norminette v2",
      "properties": {
        "norminettev2.norminette_bin": {
          "type": "string",
          "default": "norminettev2",
          "description": "command to invoke the norminette (3.x)"
        }
      }
    },
    "commands": [
      {
        "command": "42-norminette-v2.launchNorm",
        "title": "Launch Norminette v2"
      }
    ]
  },
  "dependencies": {
    "vscode-languageserver": "^6.1.1",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "vscode-test": "^1.5.0"
  }
}
